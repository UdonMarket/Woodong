<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mybatis.CreateBoardImpl">
	
	<select id="selectOrder" resultType="int">
		SELECT count(*) FROM createboard WHERE blocation=#{0}
	</select>

	<insert id="createboard" parameterType="mybatis.CreateBoardDTO"> 
		INSERT INTO createboard VALUES (#{bname}, #{blocation}, #{requestname}, #{border})
	</insert>
	
	<select id="selectBoard" resultType="mybatis.CreateBoardDTO">
		SELECT * FROM createboard WHERE blocation=#{0} ORDER BY border
	</select>
</mapper>